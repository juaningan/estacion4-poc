[Unit]
Description=consul agent
Requires=network-online.target
After=network-online.target

[Service]
Restart=on-failure
ExecStart=/usr/local/bin/fsconsul -addr="192.168.50.2:8500"  controlrepo/development /run/controlrepo "/usr/bin/puppet apply /run/controlrepo/site.pp"

[Install]
WantedBy=multi-user.target
